{
  "manifest_version": 2,

  "name": "CliMate",
  "description": "This extension allow you to the current weather in any city",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click for weather"
  },
  
  "permissions": [
    "activeTab"
  ],

  "content_scripts": [
    {
    	"matches": ["http://www.google.com/*"],
    	"js": ["jquery.js"]
    }
  ]

}
